<h1>Balances</h1>

<div class="mb-2">
    <%= link_to "new", new_balance_path %>
</div>

<ul class="mx-0 px-0">
    <% @balances.each do | balance | %>
        <li class="list-item my-2 px-4">
            <a href="<%= balance_path(balance) %>">    
                <div class="row">
                    <div class="col-3"><%= as_euro(balance.balance) %></div>
                    <div class="col-3"><%= balance.account.name %></div>

                </div>
                <div>
                    <%= link_to 'edit', edit_balance_path(balance) %>
                    | <%= link_to 'delete', balance_path(balance), method: :delete, data: { confirm: "Are you sure?" } %>
                </div>
            </a>
        </li>
    <% end %>
</ul>
