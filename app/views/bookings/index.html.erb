<h1>Bookings</h1>
   
<ul>
    <% @bookings.each do | booking | %>
        <li class="mb-2">
            <a href="<%= booking_path(booking) %>">    
                <div class="row">
                    <div class="col-3"><%= booking.created_at.strftime("%F %T") %></div>
                    <div class="col-3 text-end"><%= number_to_currency(booking.amount, unit: "â‚¬", separator: ",", delimiter: ".", format: "%n %u") %></div>
                    <div class="col-3"><%= booking.category.name %></div>
                    <div class="col-3"><%= booking.comment %></div>
                </div>
                <div>
                    <%= link_to 'details', booking_path(booking) %>
                    | <%= link_to 'delete', booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
                </div>
            </a>
        </li>
    <% end %>
</ul>
