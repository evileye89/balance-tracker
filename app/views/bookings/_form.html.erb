<%= form_with model: @booking do |form| %>
    <div>
      <%= form.label :amount %><br>
      <%= form.number_field :amount, :step => "0.01" %>
      <% @booking.errors.full_messages_for(:amount).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :category_id %><br>
      <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
    </div>

    <div>
      <%= form.label :comment %><br>
      <%= form.text_area :comment %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
<% end %>