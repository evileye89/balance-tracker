<table class="table table-dark table-stripped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col">#</th>
            <th scope="col">sum</th>
        </tr>
    </thead>
    <tbody>
        <tr styles="border-spacing: 0 20px;">
            <%  balance_sum = calc_balances_per_year(@balances_per_year) %>

            <th scope="row">balance</th>
            <td class="text-end <%= css_currency_bg(balance_sum) %>">
                <%= as_euro(balance_sum) %>
            </td>
        </tr>

        <% @account.bookings.group_by(&:category_id).each do |category_id, bookings| %>
            <tr>
                <% category_sum = calc_category_per_year(bookings) %>

                <th scope="row"><%=bookings.first.category.name%></th>
                <td class="text-end <%= css_currency_bg(category_sum) %>">
                    <%= as_euro(category_sum) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>