<table class="table table-dark table-stripped table-hover">
    <thead>
        <tr class="text-center">
            <th scope="col">#</th>
            <th scope="col">sum</th>
        </tr>
    </thead>
    <tbody>
        <tr styles="border-spacing: 0 20px;">
            <th scope="row">balance</th>
            <td class="text-end">
                <%= number_to_currency(@balances_per_year.inject(0) { |sum, item| sum + item.balance }, unit: "€", separator: ",", delimiter: ".", format: "%n%u") %>
            </td>
        </tr>

        <% @account.bookings.group_by(&:category_id).each do |category_id, bookings| %>
            <tr>
                <%
                    sum = bookings.inject(0) { |sum, item| sum + item.amount }
                    background_cls = sum.positive? ? 'bg-success' : 'bg-danger'
                %>
                <th scope="row"><%=bookings.first.category.name%></th>
                <td class="text-end <%= background_cls %>">
                    <%= number_to_currency(sum, unit: "€", separator: ",", delimiter: ".", format: "%n%u") %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>