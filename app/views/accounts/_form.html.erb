<%= form_with model: @account do |form| %>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% @account.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :iban %><br>
        <%= form.text_field :iban %>
    </div>
    
    <div>
        <%= form.submit %>
    </div>
<% end %>