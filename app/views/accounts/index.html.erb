<h1>Accounts</h1>

<div class="mb-2">
    <%= link_to "new", new_account_path %>
</div>

<ul class="mx-0 px-0">
    <% @accounts.each do | account | %>
        <li class="list-item my-2 px-4">
            <a href="<%= account_path(account) %>">    
                <div class="row">
                    <div class="col-3"><%= account.name %></div>
                    <div class="col-3"><%= account.iban %></div>
                </div>
                <div>
                    <%= link_to 'edit', edit_account_path(account) %>
                    | <%= link_to 'delete', account_path(account), method: :delete, data: { confirm: "Are you sure?" } %>
                </div>
            </a>
        </li>
    <% end %>
</ul>
